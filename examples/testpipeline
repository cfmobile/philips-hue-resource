
resources:
- name: light
  type: phillips-hue
  source:
    host: {{HOST_URL}}
    user_id: {{USER_ID}}
    light_id: {{LIGHT_ID}}
    hue: 50000
    bri: 254
    sat: 254
    alert: lselect

- name: phillips-hue-resource
  type: git
  source:
    uri: git@github.com:cfmobile/phillips-hue-resource.git
    branch: master
    private_key: {{GIT_KEY}}

jobs:
- name: green
  plan:
  - put: light
    tags: [vsphere-toronto]
    params:
      hue: 25000
- name: red
  plan:
  - put: light
    tags: [vsphere-toronto]
    params:
      hue: 0
- name: config_file
  plan:
  - get: phillips-hue-resource
  - put: light
    tags: [vsphere-toronto]
    params:
      config_file_path: phillips-hue-resource/examples/testconfig
- name: source_only
  plan:
  - put: light
    tags: [vsphere-toronto]
- name: params_only
  plan:
  - put: light
    tags: [vsphere-toronto]
    params:
      hue: 18000
      sat: 254
      bri: 200
      alert: lselect
- name: all_over_the_place
  plan:
  - get: phillips-hue-resource
  - put: light
    tags: [vsphere-toronto]
    params:
      config_file_path: phillips-hue-resource/examples/partialconfig
      sat: 254
      bri: 130

